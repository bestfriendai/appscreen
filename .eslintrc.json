{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "THREE": "readonly",
    "JSZip": "readonly",
    "state": "writable",
    "canvas": "writable",
    "ctx": "writable",
    "db": "writable",
    "currentProjectId": "writable",
    "screenshotList": "writable",
    "noScreenshot": "writable",
    "draggedScreenshotIndex": "writable",
    "languageFlags": "writable",
    "languageNames": "writable",
    "getScreenshotImage": "writable",
    "getAvailableLanguagesForScreenshot": "writable",
    "isScreenshotComplete": "writable",
    "detectLanguageFromFilename": "writable",
    "findScreenshotByBaseFilename": "writable",
    "showDuplicateDialog": "writable",
    "addLocalizedImage": "writable",
    "getApiKey": "writable",
    "getSelectedProvider": "writable",
    "getSelectedModel": "writable",
    "generateTitlesWithGoogle": "writable",
    "generateTitlesWithAnthropic": "writable",
    "generateTitlesWithOpenAI": "writable",
    "showThreeJS": "writable",
    "updateScreenTexture": "writable",
    "switchPhoneModel": "writable",
    "phoneModelLoaded": "writable",
    "renderThreeJSToCanvas": "writable",
    "renderThreeJSForScreenshot": "writable",
    "initThreeJS": "writable",
    "UndoRedo": "readonly",
    "llmProviders": "writable",
    "generateModelOptions": "writable",
    "showAppAlert": "writable",
    "syncUIWithState": "writable",
    "updateCanvas": "writable",
    "saveState": "writable",
    "updateScreenshotList": "writable",
    "getScreenshotDataUrl": "writable",
    "parseDataUrl": "writable",
    "getBackground": "writable",
    "getScreenshotSettings": "writable",
    "getTextSettings": "writable",
    "showMagicalTitlesTooltip": "writable",
    "dismissMagicalTitlesTooltip": "writable",
    "showMagicalTitlesDialog": "writable",
    "hideMagicalTitlesDialog": "writable",
    "generateMagicalTitles": "writable",
    "openScreenshotTranslationsModal": "writable",
    "closeScreenshotTranslationsModal": "writable",
    "handleTranslationFileSelect": "writable",
    "showExportLanguageDialog": "writable",
    "closeExportLanguageDialog": "writable",
    "initDuplicateDialogListeners": "writable",
    "closeDuplicateDialog": "writable",
    "setThreeJSRotation": "writable",
    "loadCachedPhoneModel": "writable",
    "callLLM": "writable",
    "addProjectLanguage": "writable",
    "parseAIResponse": "writable",
    "openDatabase": "writable"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-undef": "warn",
    "no-redeclare": "off",
    "no-constant-condition": "warn",
    "no-empty": "warn",
    "no-fallthrough": "warn",
    "no-unreachable": "error",
    "eqeqeq": ["warn", "smart"],
    "no-var": "off",
    "prefer-const": "off"
  }
}
