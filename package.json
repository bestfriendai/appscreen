{
  "name": "appscreen",
  "version": "1.0.0",
  "description": "App Store Screenshot Generator",
  "main": "app.js",
  "scripts": {
    "test": "node tests/run-tests.js",
    "test:browser": "echo 'Open http://localhost:8000/tests/ in browser'",
    "lint": "eslint *.js --no-error-on-unmatched-pattern",
    "lint:fix": "eslint *.js --fix --no-error-on-unmatched-pattern",
    "serve": "python3 -m http.server 8000",
    "electron": "electron electron/main.js",
    "check": "npm run lint && npm run test"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "eslint": "^8.57.0"
  },
  "author": "",
  "license": "MIT"
}